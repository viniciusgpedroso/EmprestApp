<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comviniciusgpedroso.github.borrowit.MainActivity">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="comviniciusgpedroso.github.borrowit.NewItemActivity">

        <!-- TODO implement toogle button for objects and disable @+id/amount_et PAY -> TO RETURN -->

        <TextView
            android:id="@+id/question_pay_receive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Receive or Return?"/>

        <View
            android:id="@+id/radio_horizontal_line"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#bdbdbd"
            app:layout_constraintTop_toBottomOf="@id/question_pay_receive"/>

        <RadioGroup
            android:id="@+id/pay_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/radio_horizontal_line">

            <RadioButton
                android:id="@+id/to_receive_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="To Receive" />

            <RadioButton
                android:id="@+id/to_pay_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Return" />
        </RadioGroup>

        <TextView
            android:id="@+id/value_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Value"
            app:layout_constraintTop_toBottomOf="@id/pay_radio_group"/>

        <View
            android:id="@+id/value_line"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#bdbdbd"
            app:layout_constraintTop_toBottomOf="@id/value_tv"/>

        <EditText
            android:id="@+id/amount_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Value borrowed"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="numberDecimal"
            android:maxLength="19"
            app:layout_constraintTop_toBottomOf="@id/value_line"
            app:layout_constraintStart_toStartOf="parent"/>

        <CheckBox
            android:id="@+id/already_paid_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already paid?"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toRightOf="@+id/amount_et"
            app:layout_constraintTop_toBottomOf="@id/value_line"
            app:layout_constraintBottom_toBottomOf="@id/amount_et"/>

        <TextView
            android:id="@+id/contact_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Contact"
            app:layout_constraintTop_toBottomOf="@id/amount_et"/>

        <View
            android:id="@+id/contact_line"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#bdbdbd"
            app:layout_constraintTop_toBottomOf="@id/contact_tv"/>

        <!--TODO Make Contact picker-->
        <EditText
            android:id="@+id/contact_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Contact name"
            android:inputType="textPersonName"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/contact_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dates_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Dates"
            app:layout_constraintTop_toBottomOf="@id/contact_et"/>

        <View
            android:id="@+id/dates_line"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#bdbdbd"
            app:layout_constraintTop_toBottomOf="@id/dates_tv"/>

        <Button
            android:id="@+id/borrow_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set borrow date"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="showBorrowDatePicker"
            app:layout_constraintTop_toBottomOf="@+id/dates_line"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/due_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set due date"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="showDueDatePicker"
            app:layout_constraintTop_toBottomOf="@+id/dates_line"
            app:layout_constraintStart_toEndOf="@id/borrow_date_btn"/>

        <!--TODO Change this button to a fab button with a check mark-->
        <Button
            android:id="@+id/button_save"
            android:text="DONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/due_date_btn"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_check_white_24dp"
        app:fabSize="mini"/>
</android.support.design.widget.CoordinatorLayout>